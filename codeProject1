#include <iostream>
#include <string>
#include <fstream>
#include <iomanip>

using namespace std;

int main()
{
	//variables
	int mode = 0;
	double num1 = 0;
	double num2 = 0;
	double num3 = 0;

	cout<<"please enter the mode you would like to use."<<endl;
	cout<<"adding(1)"<<endl;
	cout<<"substracting(2)"<<endl;
	cout<<"multiplying(3)"<<endl;
	cout<<"dividing(4)"<<endl;
	cin>>mode;

	switch(mode)
	{
		case 1:
		cout<<"please enter in your first number"<<endl;
		cin>>num1;
		cout<<"please enter in the second number"<<endl;
		cin>>num2;
		num3 = num1 + num2;
		break;
		case 2:
		cout<<"please enter in your first number"<<endl;
		cin>>num1;
		cout<<"please enter in the second number"<<endl;
		cin>>num2;
		break;
		case 3:
		cout<<"please enter in your first number"<<endl;
		cin>>num1;
		cout<<"please enter in the second number"<<endl;
		cin>>num2;
		break;
		case 4:
		cout<<"please enter in your first number"<<endl;
		cin>>num1;
		cout<<"please enter in the second number"<<endl;
		cin>>num2;
		break;
		default:
		cout<<"end"<<endl;
		break;
	}
	cout<<"this is your answer: ";
	cout<<num3<<endl;
	return 0;
}
