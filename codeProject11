#include <iostream>
#include <string>
#include <fstream>
#include <iomanip>

using namespace std;

int main()
{
  double Amounto = 0.0;
  double AmountFrom = 0.0;
  double RateFrom = 0.0;
  double Rato = 100.0;

  cout<<"How many euros are you exchanging? ";
  cin>>AmountFrom;
  cout<<"What is the euro exchange rate? ";
  cin>>RateFrom;
  cout<<AmountFrom<<" at an exchange rate of "<<RateFrom<<" is"<<endl;
  Amounto = AmountFrom * RateFrom / Rato;
  cout<<Amounto<<" U.S. Dollars"<<endl;

  return 0;
}

