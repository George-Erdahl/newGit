#include <iostream>
#include <string>
#include <fstream>
#include <iomanip>

using namespace std;

int main()
{
  int age = 0;

  cout<<"How old are you? ";
  cin>>age;
  if(age < 15)
  {
    cout<<"You are not old enough to drive"<<endl;
  }
  else if(age < 16)
  {
    cout<<"You may be old enough to drive"<<endl;
  }
  else
  {
    cout<<"You are old enough to drive"<<endl;
  }

  return 0;
}
