#include <iostream>
#include <string>
#include <fstream>
#include <iomanip>

using namespace std;

int main()
{
  double Principal = 0.0;
  double Rate = 0.0;
  double Rate2 = 0.0;
  double Time = 0.0;
  double Invest = 0.0;

  cout<<"enter the principal: ";
  cin>>Principal;
  cout<<"enter the rate of intrest: ";
  cin>>Rate;
  cout<<"enter the amount of years: ";
  cin>>Time;
  Rate2 = Rate / 100;
  Invest = Principal * (1 + Rate2 * Time);
  cout<<"After "<<Time<<" years at "<<Rate<<"%, the investment will be worth $"<<Invest<<endl;

  return 0;
}
