#include <iostream>
#include <string>
#include <fstream>
#include <iomanip>

using namespace std;

int main()
{
  double Principal = 0.0;
  double Rate = 0.0;
  double Rate1 = 0.0;
  int Time = 0;
  int Amount = 0;
  double Total = 1.0;
  double Par1 = 0.0;
  double par1 = 0.0;
  double Par2 = 0.0;
  int fro = 0;

  cout<<"What is the Principal amount? ";
  cin>>Principal;
  cout<<"What is the rate? ";
  cin>>Rate;
  cout<<"What is the number of years? ";
  cin>>Time;
  cout<<"What is the number of time the intrest is compunded per year? ";
  cin>>Amount;
  Rate1 = Rate / 100;
  Par1 = 1 + Rate1 / Amount;
  par1 = 1 + Rate1 / Amount;
  Par2 = Time * Amount;
  for (int fro = 1; fro < Par2 ; fro += 1)
  {
     par1 *= Par1;
  }
  Total = Principal * par1;
  cout<<"$"<<Principal<<" invested at "<<Rate<<"% for "<<Time<<" years compounded "<<Amount<<" times per year is "<<Total<<endl;

  return 0;
}
