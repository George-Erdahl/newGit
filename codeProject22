#include <iostream>
#include <string>
#include <fstream>
#include <iomanip>

using namespace std;

int main()
{
  double num1 = 0.0;
  double num2 = 0.0;
  double num3 = 0.0;

  cout<<"Please enter the first number: ";
  cin>>num1;
  cout<<"Please enter the second number: ";
  cin>>num2;
  cout<<"Please enter the third number: ";
  cin>>num3;
  if (num1 > num2 && num2 >= num3)
  {
    cout<<"the first is the greatest number"<<endl;
  }
  else if (num2 > num1 && num2 >= num3)
  {
    cout<<"the second is the greatest number"<<endl;
  }
  else if (num3 > num2 && num2 >= num1)
  {
    cout<<"the third is the greatest number"<<endl;
  }
  else
  {
    cout<<"ITS A TIE"<<endl;
  }
  return 0;
}
